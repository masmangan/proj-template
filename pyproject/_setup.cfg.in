[metadata]
name = {project[name]}
version-file = version.txt
author = {author[name]}
author-email = {author[email]}
home-page = https://github.com/{author[githubuser]}/{project[name]}
description = {project[description]}
long-description = file: README.md
long_description_content_type = text/markdown
license = {project[license]}
license-file = COPYING
platform = any
keywords = {project[keywords]}
classifiers =
    Development Status :: 3 - Alpha
    Intended Audience :: Developers
    Operating System :: OS Independent
    Programming Language :: Python
    Programming Language :: Python :: 3.7
    Programming Language :: Python :: 3.8
    {license_classifier}
project_urls =
    Bug Tracker = https://github.com/{author[githubuser]}/{project[name]}/issues
    Changelog = https://github.com/{author[githubuser]}/{project[name]}/blob/master/CHANGELOG.md

[options]
zip_safe = false
include_package_data = true
python_requires = >= 3.7
packages = {project[name]}
test_suite = tests
setup_requires =
    setuptools >= 50.0
install_requires =
  {requires[install]}
tests_require =
  {requires[tests]}

[options.entry_points]
console_scripts =
  {project[name]} = {project[name]}.__main__:main

[options.extras_require]
dev =

test =
    behave
    pytest
    coverage
ci =
    flake8
    pylint
    pydocstyle

[options.package_data]
{project[name]} = version.txt

[bdist_wheel]
universal = true

[check]
metadata = true
restructuredtext = true
strict = true

[sdist]
formats = zip, gztar

[coverage:report]
show_missing = true
exclude_lines =
    pragma: no cover
    if False
    # @abc.abstractmethod
    # @abc.abstractproperty
    # raise NotImplementedError
    # return NotImplemented
    # except ImportError
    # raise MemoryError
    # if __name__ == .__main__.:
    # if typing.TYPE_CHECKING:

[pydocstyle]
match-dir = (?!tests)(?!resources)(?!docs)[^\.].*
match = (?!test)(?!setup)[^\._].*\.py
inherit = false
ignore =

[flake8]
max-line-length = 79
doctests = True
max-complexity = 10
exclude =
    .tox
    .venv
    .git
    .eggs
    __pycache__
    docs
    build
    dist

[pylint]
max-nested-blocks = 5
ignored-modules = behave
max-line-length = 79
load-plugins = pylint.extensions.mccabe

[behave]
stop = true
stdout_capture = true
junit = false
